{
  "name": "tegnespillet",
  "author": "Eirik Brandtz√¶g <eirikb@eirikb.no>",
  "private": true,
  "scripts": {
    "index": "pug index.pug",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --inline --hot --host 0.0.0.0",
    "start": "npm-run-all index dev",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "prepare": "shx rm -rf public/* && shx mkdir -p public",
    "copy": "shx cp index.html public && shx cp -r dist public",
    "fb-deploy": "firebase deploy --project tegnespillet-3493f",
    "deploy": "npm-run-all index prepare build copy fb-deploy"
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ]
    ]
  },
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "canvas-to-blob": "0.0.0",
    "evil-icons": "^1.9.0",
    "firebase": "^4.3.1",
    "material-design-lite": "^1.2.1",
    "node-sass": "^4.5.3",
    "pug-cli": "^1.0.0-alpha6",
    "sass-loader": "^6.0.6",
    "signature_pad": "^2.3.0",
    "vue": "^2.1.0",
    "vuex": "^2.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.0.0",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "file-loader": "^0.11.2",
    "firebase-tools": "^3.2.0",
    "npm-run-all": "^4.1.1",
    "shx": "^0.2.1",
    "vue-loader": "^13.0.4",
    "vue-template-compiler": "^2.1.0",
    "webpack": "^3.5.6",
    "webpack-dev-server": "^2.1.0-beta.0"
  }
}
