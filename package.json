{
  "name": "drawesome",
  "author": "Eirik Brandtz√¶g <eirikb@eirikb.no>",
  "private": true,
  "scripts": {
    "index": "pug index.pug",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --inline --hot --host 0.0.0.0",
    "start": "npm-run-all index dev",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "prepare": "shx rm -rf public/* && shx mkdir -p public",
    "copy": "shx cp index.html public && shx cp -r dist public",
    "fb-deploy": "firebase deploy --project drawesome-fd8ec",
    "deploy": "npm-run-all index prepare build copy fb-deploy"
  },
  "babel": {
    "presets": [
      ["es2015", {
        "modules": false
      }]
    ]
  },
  "dependencies": {
    "canvas-to-blob": "0.0.0",
    "firebase": "^3.6.2",
    "material-design-lite": "^1.2.1",
    "node-sass": "^3.13.0",
    "pug-cli": "^1.0.0-alpha6",
    "sass-loader": "^4.0.2",
    "signature_pad": "^1.5.3",
    "vue": "^2.1.0",
    "vue-mdl": "^0.10.0",
    "vuex": "^2.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "file-loader": "^0.9.0",
    "firebase-tools": "^3.2.0",
    "npm-run-all": "^3.1.1",
    "shx": "^0.2.1",
    "vue-loader": "^10.0.0",
    "vue-template-compiler": "^2.1.0",
    "webpack": "^2.1.0-beta.25",
    "webpack-dev-server": "^2.1.0-beta.0"
  }
}
