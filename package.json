{
  "name": "drawesome",
  "description": "",
  "author": "Eirik Brandtz√¶g <eirikb@eirikb.no>",
  "private": true,
  "scripts": {
    "index": "pug index.pug",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --open --inline --hot --host 0.0.0.0",
    "start": "npm-run-all index dev",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "prepare": "shx rm -rf public/* && shx mkdir -p public",
    "copy": "shx cp index.html public && shx cp -r dist public",
    "fb-deploy": "firebase deploy",
    "deploy": "npm-run-all index prepare build copy fb-deploy"
  },
  "dependencies": {
    "firebase": "3.5.2",
    "vue": "2.0.1",
    "vuex": "2.0.0"
  },
  "devDependencies": {
    "babel-core": "6.0.0",
    "babel-loader": "6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "cross-env": "3.0.0",
    "css-loader": "0.25.0",
    "file-loader": "0.9.0",
    "firebase-tools": "3.0.8",
    "npm-run-all": "3.1.1",
    "pug-cli": "1.0.0-alpha6",
    "shx": "0.2.1",
    "vue-loader": "9.7.0",
    "webpack": "2.1.0-beta.25",
    "webpack-dev-server": "2.1.0-beta.0"
  }
}
